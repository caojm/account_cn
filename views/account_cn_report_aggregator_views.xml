<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_aggregator_action" model="ir.actions.act_window">
    <field name="name">Report Aggregator</field>
    <field name="res_model">account.cn.report.aggregator</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_aggregator_view_tree" model="ir.ui.view">
    <field name="name">Report Aggregator Tree</field>
    <field name="model">account.cn.report.aggregator</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="parent_item_id" />
        <field name="aggregation"/>
        <field name="company_id" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_aggregator_view_form" model="ir.ui.view">
    <field name="name">Report Aggregator Form</field>
    <field name="model">account.cn.report.aggregator</field>
    <field name="arch" type="xml">
      <form string="Report Aggregator">
        <header>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" />
              <field name="parent_item_id" />
            </group>
            <group>
              <field name="aggregation" />
              <field name="company_id" />
            </group>
            <notebook>
              <page string="Items">
                <field name="child_item_ids">
                  <tree>
                    <field name="report_model_id" />
                    <field name="code" />
                    <field name="name" />
                  </tree>
                </field>
              </page>
              <page string="Preconditon">
                <group>
                  <group>
                    <field name="condition" />
                  </group>
                  <group>
                    <field name="constant" />
                  </group>
                </group>
                <group>
                  <field name="filter_ids" />
                </group>
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
