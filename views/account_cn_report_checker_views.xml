<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_checker_action" model="ir.actions.act_window">
    <field name="name">Report Checker</field>
    <field name="res_model">account.cn.report.checker</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_checker_view_tree" model="ir.ui.view">
    <field name="name">Report Checker Tree</field>
    <field name="model">account.cn.report.checker</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_checker_view_form" model="ir.ui.view">
    <field name="name">Report Checker Form</field>
    <field name="model">account.cn.report.checker</field>
    <field name="arch" type="xml">
      <form string="Report Checker">
        <header>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" />
            </group>
            <group>
            </group>
            <notebook>
              <page string="Left">
                <field name="left_line_ids">
                  <tree>
                    <field name="report_item_id" />
                    <field name="aggregation" />
                    <field name="name" />
                  </tree>
                </field>
              </page>
              <page string="Right">
                <field name="right_line_ids">
                  <tree>
                    <field name="report_item_id" />
                    <field name="aggregation" />
                    <field name="name" />
                  </tree>
                </field>
              </page>
              <page string="Preconditon">
                <group>
                  <group>
                    <field name="condition" />
                  </group>
                  <group>
                    <field name="constant" />
                  </group>
                </group>
                <group>
                  <field name="precondition_line_ids" >
                    <tree>
                      <field name="report_item_id" />
                      <field name="aggregation" />
                      <field name="name" />
                    </tree>
                  </field>
                </group>
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
