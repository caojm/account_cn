<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_filter_action" model="ir.actions.act_window">
    <field name="name">Report Filter</field>
    <field name="res_model">account.cn.report.filter</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_filter_view_tree" model="ir.ui.view">
    <field name="name">Report Filter Tree</field>
    <field name="model">account.cn.report.filter</field>
    <field name="arch" type="xml">
      <tree>
        <field name="company_id"/>
        <field name="account_id"/>
        <field name="account_tag_id"/>
        <field name="amount_type"/>
        <field name="orientation"/>
        <field name="aggregation"/>
        <field name="reclassify" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_filter_view_form" model="ir.ui.view">
    <field name="name">Report Filter Form</field>
    <field name="model">account.cn.report.filter</field>
    <field name="arch" type="xml">
      <form string="Report Filter">
        <header>
        </header>
        <sheet>
          <group>
            <group>
              <field name="company_id" />
              <field name="account_id" />
              <field name="account_tag_id" />
            </group>
            <group>
              <field name="amount_type" />
              <field name="orientation" />
              <field name="aggregation" />
              <field name="reclassify" />
            </group>
            <notebook>
              <page string="Items">
                <field name="item_ids" />
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
