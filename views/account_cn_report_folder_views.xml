<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_folder_action" model="ir.actions.act_window">
    <field name="name">Report Folder</field>
    <field name="res_model">account.cn.report.folder</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_folder_view_tree" model="ir.ui.view">
    <field name="name">Report Folder Tree</field>
    <field name="model">account.cn.report.folder</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="date_from" />
        <field name="date_to" />
        <field name="last_update" />
        <field name="posted_only"/>
        <field name="exact_match"/>
        <field name="currency_id" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_folder_view_form" model="ir.ui.view">
    <field name="name">Report Folder Form</field>
    <field name="model">account.cn.report.folder</field>
    <field name="arch" type="xml">
      <form string="Report Folder">
        <header>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" />
              <field name="currency_id" />
              <field name="date_from" />
              <field name="date_to" />
            </group>
            <group>
              <field name="last_update" />
              <field name="posted_only"/>
              <field name="exact_match"/>
            </group>
          </group>
          <group>
            <field name="company_ids" widget="many2many_tags" />
            <field name="accounting_book_ids" widget="many2many_tags" />
          </group>
          <notebook>
            <page string="Reports">
              <field name="folder_model_ids">
                <tree>
                  <field name="sequence" widget="handle"/>
                  <field name="report_model_id" />
                  <field name="name" />
                </tree>
                <form>
                  <group>
                    <group>
                      <field name="report_model_id" />
                    </group>
                    <group>
                      <field name="name" />
                    </group>
                  </group>
                </form>
              </field>
            </page>
            <page string="Checkers">
              <field name="folder_checker_ids">
                <tree>
                  <field name="sequence" widget="handle"/>
                  <field name="report_checker_id" />
                  <field name="name" />
                </tree>
                <form>
                  <group>
                    <group>
                      <field name="report_checker_id" />
                    </group>
                    <group>
                      <field name="name" />
                    </group>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
