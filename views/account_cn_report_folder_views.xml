<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_folder_action" model="ir.actions.act_window">
    <field name="name">Report Folder</field>
    <field name="res_model">account.cn.report.folder</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_folder_view_tree" model="ir.ui.view">
    <field name="name">Report Folder Tree</field>
    <field name="model">account.cn.report.folder</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="date_from" />
        <field name="date_to" />
        <field name="last_update" />
        <field name="posted_only"/>
        <field name="exact_match"/>
        <field name="currency_id" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_folder_view_form" model="ir.ui.view">
    <field name="name">Report Folder Form</field>
    <field name="model">account.cn.report.folder</field>
    <field name="arch" type="xml">
      <form string="Report Folder">
        <header>
          <button name="compute_and_check" string="Compute &amp; Check" class="oe_highlight" type="object" data-hotkey="c"/>
          <button name="compute_only" string="Compute" class="btn_secondary" type="object"/>
          <button name="check_only" string="Check" class="btn_secondary" type="object"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" />
              <field name="currency_id" />
              <field name="comparison" />
            </group>
            <group>
              <field name="last_update" />
              <field name="posted_only"/>
              <field name="exact_match"/>
            </group>
          </group>
          <group>
            <group>
              <field name="date_from" />
              <field name="date_to" />
            </group>
            <group>
              <field name="com_date_from" attrs="{'invisible': [('comparison', '!=', True)], 'required': [('comparison', '=', True)]}"/>
              <field name="com_date_to" attrs="{'invisible': [('comparison', '!=', True)], 'required': [('comparison', '=', True)]}"/>
            </group>
          </group>
          <group>
            <field name="company_ids" widget="many2many_tags" />
            <field name="accounting_book_ids" widget="many2many_tags" />
          </group>
          <notebook>
            <page string="Reports">
              <field name="folder_model_ids">
                <tree editable="bottom">
                  <field name="sequence" widget="handle"/>
                  <button name="to_be" type="object" string="View" class="btn-success" title="Preview report."/>
                  <button name="to_be" type="object" string="Excel" class="btn-info" title="Download excel report."/>
                  <button name="to_be" type="object" icon="fa-paperclip" title="Upload excel template."/>
                  <field name="report_model_id" />
                  <field name="name" />
                </tree>
                <form>
                  <group>
                    <group>
                      <field name="report_model_id" />
                    </group>
                    <group>
                      <field name="name" />
                    </group>
                  </group>
                </form>
              </field>
            </page>
            <page string="Checkers">
              <field name="folder_checker_ids">
                <tree editable="bottom">
                  <field name="sequence" widget="handle"/>
                  <field name="report_checker_id" />
                  <field name="name" />
                  <field name="check_result" widget="badge" decoration-success="check_result == 'pass'" decoration-danger="check_result == 'fail'"/>
                </tree>
                <form>
                  <group>
                    <group>
                      <field name="report_checker_id" />
                    </group>
                    <group>
                      <field name="name" />
                    </group>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
