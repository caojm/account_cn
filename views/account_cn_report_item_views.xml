<?xml version="1.0"?>
<odoo>
  <record id="account_cn_report_item_action" model="ir.actions.act_window">
    <field name="name">Report Item</field>
    <field name="res_model">account.cn.report.item</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_report_item_view_tree" model="ir.ui.view">
    <field name="name">Report Item Tree</field>
    <field name="model">account.cn.report.item</field>
    <field name="arch" type="xml">
      <tree>
        <field name="report_model_id"/>
        <field name="name"/>
        <field name="position"/>
        <field name="location"/>
        <field name="parent_aggregator_id"/>
        <field name="measure"/>
        <field name="filter_ids" widget="many2many_tags"/>
        <field name="comment"/>
        <field name="input" optional="hide"/>
        <field name="aggregator_factor" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_report_item_view_form" model="ir.ui.view">
    <field name="name">Report Item Form</field>
    <field name="model">account.cn.report.item</field>
    <field name="arch" type="xml">
      <form string="Report item">
        <sheet>
          <group>
            <group>
              <field name="report_model_id"/>
              <field name="name"/>
              <field name="position"/>
              <field name="location"/>
            </group>
            <group>
              <field name="measure"/>
              <field name="parent_aggregator_id"/>
              <field name="input"/>
              <field name="comment"/>
              <field name="aggregator_factor"/>
            </group>
          </group>
          <notebook>
            <page string="Filters">
              <field name="filter_ids" />
            </page>
            <page string="Aggregators">
              <field name="child_aggregator_ids"/>
            </page>
            <page string="Factor Of">
              <field name="factor_of_ids" attrs="{'readonly': True}"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
