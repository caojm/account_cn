<?xml version="1.0"?>
<odoo>
  <record id="account_cn_voucher_action" model="ir.actions.act_window">
    <field name="name">Manage Voucher</field>
    <field name="res_model">account.cn.voucher</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="account_cn_voucher_view_tree" model="ir.ui.view">
    <field name="name">Accounting Voucher Tree</field>
    <field name="model">account.cn.voucher</field>
    <field name="arch" type="xml">
      <tree default_order="date, id">
        <field name="date"/>
        <field name="word_id"/>
        <field name="number"/>
        <field name="book_currency_id" invisible="1"/>
        <!-- <field name="book_currency_id"/> -->
        <field name="amount_total" sum="Total"/>
        <field name="state" invisible="1"/>
        <field name="stage_id" widget="badge" decoration-muted="state == 'draft'" decoration-success="state == 'posted'" decoration-warning="state not in ('draft', 'posted')" optional="show" />
        <field name="attachment" optional="hide"/>
        <field name="accounting_book_id" optional="hide"/>
        <field name="company_id" optional="hide"/>
      </tree>
    </field>
  </record>
  <record id="account_cn_voucher_view_form" model="ir.ui.view">
    <field name="name">Accounting Voucher Form</field>
    <field name="model">account.cn.voucher</field>
    <field name="arch" type="xml">
      <form string="Accounting Voucher">
        <header>
          <!-- <button name="do_next_stage" string="Confirm" class="btn_secondary" type="object" data-hotkey="m"/> -->
          <!-- <button name="undo_next_stage" string="Un-Confirm" class="btn_secondary" type="object" data-hotkey="shift+m"/> -->
          <!-- <button name="do_next_stage" string="Check" class="btn_secondary" type="object" data-hotkey="k"/> -->
          <!-- <button name="undo_next_stage" string="Un-Check" class="btn_secondary" type="object" data-hotkey="shift+k"/> -->
          <!-- <button name="do_next_stage" string="Sign" class="btn_secondary" type="object" data-hotkey="i"/> -->
          <!-- <button name="undo_next_stage" string="Un-Sign" class="btn_secondary" type="object" data-hotkey="shift+i"/> -->
          <!-- <button name="do_next_stage" string="Post" class="btn_secondary" type="object" data-hotkey="t"/> -->
          <!-- <button name="undo_next_stage" string="Un-Post" class="btn_secondary" type="object" data-hotkey="shift+t"/> -->

          <field name="is_first_stage" invisible="1"/>
          <field name="next_state" invisible="1"/>
          <field name="state" invisible="1"/>
          <button name="do_next_stage" string="Confirm" class="oe_highlight" type="object" data-hotkey="m" attrs="{'invisible': [('next_state', '!=', 'prepared')]}"/>
          <button name="do_next_stage" string="Check" class="oe_highlight" type="object" data-hotkey="k" attrs="{'invisible': [('next_state', '!=', 'checked')]}"/>
          <button name="do_next_stage" string="Sign" class="oe_highlight" type="object" data-hotkey="i" attrs="{'invisible': [('next_state', '!=', 'signed')]}"/>
          <button name="do_next_stage" string="Post" class="oe_highlight" type="object" data-hotkey="t" attrs="{'invisible': [('next_state', '!=', 'posted')]}"/>
          <button name="do_next_stage" string="Lock" class="oe_highlight" type="object" data-hotkey="t" attrs="{'invisible': [('next_state', '!=', 'locked')]}"/>
          <button name="undo_next_stage" string="Un-Confirm" class="btn_secondary" type="object" data-hotkey="shift+m" states="prepared"/>
          <button name="undo_next_stage" string="Un-Check" class="btn_secondary" type="object" data-hotkey="shift+k" states="checked"/>
          <button name="undo_next_stage" string="Un-Sign" class="btn_secondary" type="object" data-hotkey="shift+i" states="signed"/>
          <button name="undo_next_stage" string="Un-Post" class="btn_secondary" type="object" data-hotkey="shift+t" states="posted"/>
          <button name="undo_next_stage" string="Un-Lock" class="btn_secondary" type="object" data-hotkey="shift+l" states="locked"/>
          <button name="reject_stage" string="Reject" class="btn_secondary" type="object" attrs="{'invisible': [('is_first_stage', '=', True)]}"/>
          <!-- <field name="state" widget="statusbar" statusbar_visible="draft, posted"/> -->
          <field name="stage_id" widget="statusbar"/>
        </header>
        <sheet>
          <h1 class="text-center">
            <p><span><field name="voucher_type_id" /></span></p>
          </h1>
          <group>
            <group>
              <field name="company_id" />
              <field name="accounting_book_id" />
              <field name="date" />
            </group>
            <group>
              <field name="word_id" />
              <field name="number" />
              <field name="attachment" />
            </group>
            <notebook>
              <page string="Entries">
                <field name="line_ids">
                  <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="summary"/>
                    <field name="account_id"/>
                    <field name="partner_id"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" optional="hide"/>
                    <field name="currency_id" optional="hide"/>
                    <field name="amount_currency" optional="hide"/>
                    <field name="book_currency_id" invisible="1"/>
                    <field name="debit" sum="Total Debit"/>
                    <field name="credit" sum="Total Credit"/>
                    <field name="accounting_book_id" optional="hide"/>
                    <field name="company_id" optional="hide"/>
                  </tree>
                </field>
              </page>
              <page string="Signature">
                <group>
                  <group>
                    <field name="accounting_supervisor_id" />
                  </group>
                  <group>
                    <field name="preparer_id" />
                  </group>
                  <group>
                    <field name="checker_id" />
                  </group>
                  <group>
                    <field name="casher_id" />
                  </group>
                  <group>
                    <field name="poster_id" />
                  </group>
                </group>
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
