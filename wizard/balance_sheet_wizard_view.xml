<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="balance_sheet_wizard" model="ir.ui.view">
    <field name="name">Balance Sheet</field>
    <field name="model">balance.sheet.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="date_from" />
            <field name="date_to" />
          </group>
          <group>
            <field name="posted" />
          </group>
        </group>
        <footer>
          <button
            name="button_export_html"
            string="View"
            type="object"
            default_focus="1"
            class="oe_highlight"
            />
          
          <button
            string="Cancel"
            class="oe_link"
            special="cancel"
            />
        </footer>
      </form>
    </field>
  </record>
  <record id="action_balance_sheet_wizard" model="ir.actions.act_window">
    <field name="name">Balance Sheet</field>
    <field name="res_model">balance.sheet.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="balance_sheet_wizard" />
    <field name="target">new</field>
  </record>
</odoo>
